<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/price_txt"
        android:layout_width="238dp"
        android:layout_height="74dp"
        android:layout_marginBottom="147dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/spinner2"
        app:layout_constraintEnd_toEndOf="@+id/quan_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/quan_txt"
        app:layout_constraintTop_toBottomOf="@+id/prod_txt" />

    <EditText
        android:id="@+id/quan_txt"
        android:layout_width="216dp"
        android:layout_height="58dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_txt" />

    <Button
        android:id="@+id/upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="135dp"
        android:text="Upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/quan_txt" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="124dp"
        android:layout_height="0dp"
        android:layout_marginBottom="196dp"
        android:entries="@array/proCategory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/quan_txt"
        app:layout_constraintHorizontal_bias="0.629"
        app:layout_constraintStart_toEndOf="@+id/quan_txt"
        app:layout_constraintTop_toBottomOf="@+id/price_txt" />

    <EditText
        android:id="@+id/prod_txt"
        android:layout_width="246dp"
        android:layout_height="86dp"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="382dp"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/back2_btn"
        app:layout_constraintEnd_toEndOf="@+id/price_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/price_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back2_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="66dp"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/upload_btn"
        app:layout_constraintTop_toBottomOf="@+id/prod_txt" />

    <EditText
        android:id="@+id/addcategory"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="113dp"
        android:ems="10"
        android:hint="New Category"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/upload_btn"
        app:layout_constraintTop_toBottomOf="@+id/quan_txt" />

    <Button
        android:id="@+id/addcate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="28dp"
        android:text="ADD"
        app:layout_constraintEnd_toEndOf="@+id/addcategory"
        app:layout_constraintTop_toBottomOf="@+id/addcategory" />

</androidx.constraintlayout.widget.ConstraintLayout>